{
  "name": "fgo-tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "simple-git-hooks",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:strict": "eslint --max-warnings 0 .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "new": "node scripts/new.js",
    "update:upgrades": "node scripts/update-upgrades-data.mjs",
    "update:svg": "node scripts/build-svg-components.mjs"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{css,json,md}": [
      "prettier -w"
    ],
    "**/!(*inkscape).svg": [
      "svgo"
    ]
  },
  "browserslist": [
    "last 2 versions",
    ">1%",
    "not ie 11"
  ],
  "dependencies": {
    "@nanostores/persistent": "^0.3.0",
    "chalk": "^4.1.2",
    "modern-diacritics": "^1.1.0",
    "nanostores": "^0.4.3",
    "next": "11.1.0",
    "next-transpile-modules": "^8.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "spacetime": "~6.16.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@svgo/jsx": "^0.2.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "globby": "^12.0.2",
    "lint-staged": "^11.1.2",
    "long-timeout": "^0.1.1",
    "modern-normalize": "^1.1.0",
    "nanocolors": "^0.2.10",
    "nanoid": "^3.1.25",
    "nanospinner": "^0.2.2",
    "node-fetch": "^3.0.0",
    "picocolors": "^0.2.1",
    "postcss": "^8.3.6",
    "postcss-color-hex-alpha": "^7.0.0",
    "postcss-focus": "^5.0.1",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "postcss-theme-ui": "^0.10.0",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.6.1",
    "svgo": "^2.7.0"
  }
}
