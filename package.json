{
  "name": "fgo-tools",
  "version": "0.1.0",
  "private": true,
  "packageMananger": "yarn",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev:scripts": "tsc --watch -p tsconfig_scripts.json",
    "build:scripts": "tsc -p tsconfig_scripts.json",
    "upgrades:legacy": "tsm src/scripts/upgrades-legacy/update-upgrades-data.mjs",
    "prebuild": "tsm src/scripts/prebuild/prebuild.mjs",
    "build": "node --version && next build",
    "dev": "yarn prebuild && next dev",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test:types": "tsc --noEmit",
    "test:server": "jest --testMatch **/tests/server/**/*.test.js",
    "test:scripts": "uvu -r tsm tests/scripts",
    "test:data": "tsm --require=./nowarn.js src/scripts/check/check.mjs",
    "test": "yarn test:types && yarn test:server && yarn test:scripts && yarn test:data --all"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn nano-staged"
  },
  "nano-staged": {
    "**/*.{js,jsx,mjs,ts,tsx}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{css,json,md,yml}": [
      "prettier -w"
    ],
    "**/!(*inkscape).svg": [
      "svgo"
    ],
    "assets/data/{events,login-tickets}/*.yml": [
      "tsm --require=./nowarn.js src/scripts/check/check.mjs --silent --file"
    ],
    "assets/data/{mana,rare}PrismShop.yml": [
      "tsm --require=./nowarn.js src/scripts/check/check.mjs --silent --file"
    ]
  },
  "browserslist": [
    "last 3 versions",
    ">0.2% and not dead"
  ],
  "dependencies": {
    "@atlasacademy/api-connector": "^3.0.124",
    "@atlasacademy/api-descriptor": "^1.0.137",
    "@babel/core": "^7.19.1",
    "@foxkit/node-util": "^0.4.0",
    "@nanostores/persistent": "^0.7.0",
    "@nanostores/react": "0.4.0",
    "@svgo/jsx": "^0.3.0",
    "@types/node": "^18.7.21",
    "@types/react": "^18.0.21",
    "classcat": "^5.0.3",
    "foxkit": "^0.3.0",
    "modern-diacritics": "^2.2.1",
    "modern-normalize": "^1.1.0",
    "nanostores": "^0.7.0",
    "next": "12.3.1",
    "node-fetch": "^3.2.10",
    "picoapi": "^0.2.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.14",
    "postcss-focus": "^5.0.1",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "spacetime": "^7.2.0",
    "svgo": "^2.7.0",
    "typescript": "4.8.3",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "13.4.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "commander": "^9.3.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "8.24.0",
    "eslint-config-foxkit": "^1.1.1",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.8.0",
    "tsm": "^2.2.2",
    "uvu": "^0.5.4"
  },
  "engines": {
    "node": "16.x"
  }
}
