{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "rules": {
    "@next/next/no-img-element": "off",
    "react/jsx-filename-extension": ["error", { "extensions": [".jsx"] }],
    "no-unused-vars": "warn",
    "no-undef": "warn"
  },
  "overrides": [
    {
      "files": ["*.jsx"],
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      }
    },
    {
      "files": ["*.mjs"]
    }
  ]
}
